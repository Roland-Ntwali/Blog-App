<div class="main_container">
  <div class="profile">
    <div class="photos">
      <ul class="photo"> 
        <li> <img src="<%= @users.photo %>"> </li>
      </ul>
    </div>
    <div class="names_posts">
      <ul class="name_post"> 
        <li class="list_name"> <%= @users.name %> </li>
        <li class="list_countpost">Number of posts: <%= @users.post_counter %> </li>
      </ul>
    </div>
  </div>
  <div class="bio">
    <ul class="bio_info width"> 
      <li class="title">Bio</li>
      <li class="bio_content"> <%= @users.bio %> </li>
    </ul>
  </div>
  <div class="post">
  <% @users.recent_posts.each do |post| %>
    <ul class="post_info width"> 
    <h3 class="title"><%= link_to post.title, user_post_path(@users, post), style: 'color: #2b9deef1; text-decoration: none;' %> #<%= post.id%></h3>
   <li class="bio_content"> <%= post.text %> </li>
   <li class="list_countcomentlikes">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %> </li>
   </ul>
   <% end %>
</div>
<button class="allcoment"> <%= link_to 'See all Post', user_posts_path(@users), style: 'color: white; text-decoration: none;' %> </button>
</div>
